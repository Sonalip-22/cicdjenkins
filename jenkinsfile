pipeline {
    agent any

    tools {
        maven 'Maven-3.8.8'   // name you configured in Jenkins -> Global Tool Configuration
        jdk 'Java-17'         // same, configure JDK in Jenkins
    }

    stages {
        stage('Checkout from GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/Sonalip-22/simplemaven-project.git'
                credentialsId: 'github-cred'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t your-dockerhub-username/your-app:latest .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-creds', url: '']) {
                    sh 'docker push your-dockerhub-username/your-app:latest'
                }
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8080:8080 your-dockerhub-username/your-app:latest'
            }
        }
    }
}


