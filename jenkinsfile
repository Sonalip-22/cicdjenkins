pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "sonalipawar22/maven-sample-app:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sonalip-22/simplemaven-project.git', credentialsId: 'github-cred'
                echo "pulling sucessfully"
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn -B -DskipTests=false clean package'
                echo "pulling sucessfully"
            }
        }

        stage('Build Docker Image') {
            steps {
                // sh "docker build -t ${DOCKER_IMAGE} ."
                sh "docker build -t myimage ."
                sh "docker images | grep ${APP_NAME}"
                echo "docker image build sucessfully"
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    sh "docker push ${DOCKER_IMAGE}"
                    echo "push dockerhub sucessfully"
                }
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f app || true'
                sh "docker run -d --name app -p 8081:8080 ${DOCKER_IMAGE}"
                echo "container run sucessfully"
            }
        }
    }
}
